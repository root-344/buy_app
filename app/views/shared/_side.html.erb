  <div class="side">
    <div class="farm-names">出品者様一覧</div>
    <ul class="side-names">
      <% @farms.each do |farm| %>
        <li class="side-name">           
        <%= link_to farm_path(farm.id), class: "side-farm-name" do %>
          <%= "#{farm.nickname}様" %>
        <% end %>
        </li>
      <% end %>
    </ul>
    <div class="date-time-box">
      <div id="date-time"></div>
    </div>
    <script type="text/javascript">
      setInterval('clock()', 500);
      function clock() {
        document.getElementById("date-time").innerHTML = showClock();
      }
      function showClock() {
        var now = new Date();
        var Year = now.getFullYear();
        var Month = now.getMonth()+1;
        var Day = now.getDate();
        var Hour = now.getHours();
        var Min = now.getMinutes();
        var Sec = now.getSeconds();

        var s = Year + "年" + Month + "月" + Day + "日" + Hour + ":" + Min + ":" + Sec;
        return s;
      }
    </script>
  </div>

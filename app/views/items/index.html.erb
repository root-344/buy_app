<div class="main-wrapper">
  
  <%= render "shared/side"%>
  
  <div class="item-contents">
    <h2 class="main-title">商品一覧</h2>
    <ul class="item-lists">
      <% @items.each do |item| %>
        <li class="list">
            <%= link_to item_path(item.id) do %>
              <div class="item-img-content">
                <%= image_tag item.image, class: "item-images" if item.image.present? %>
                <% if item.order.present? %>
                  <div class='sold-out'>
                    <span>売却済み</span>
                  </div> 
                <% end %>
              </div>
              <div class='item-info'>
                <h3 class='item-name'>
                  <%= "#{item.product}" %>
                </h3>
                <div class='item-price'>
                  <span><%= "#{item.price}" %>
                  円<br><%= "#{item.shipping_fee.name}" %>
                  </span>  
                </div>
              </div>
            <% end %>
        </li>
      <% end %>
      <% if @items.length == 0 %> 
        <li class='list'>
          <%= link_to '#' do %>
            <div class="item-img-content">
              <%= image_tag "https://tech-master.s3.amazonaws.com/uploads/curriculums/images/Rails1-4/sample.jpg", class: "item-images" %> 
            </div>  
            <div class='item-info'>
              <h3 class='item-name'>
                  商品を出品してださい。
              </h3>
              <div class='item-price'>
                <span>99999999円<br>(税込み)</span>
              </div>
            </div> 
          <% end %> 
        </li>
      <% end %> 
    </ul>
    <div class="page-container">
      <%= paginate @items, class: "page" %>
    </div>
  </div>
</div>
</div>

<div class="main-wrapper">
  <div class="side"></div>
  <div class="item-contents">
    <h2 class="main-title">検索一覧</h2>
    <ul class="item-lists">
      <% @items.each do |item| %>
        <li class="list">
          <%= link_to item_path(item.id) do %>
          <div class="item-img-content">
            <%= image_tag item.images[0], class: "item-images" %>
            <% if item.order.present? %>
              <div class='sold-out'>
                <span>売却済み</span>
              </div> 
            <% end %> 
          </div>
          <div class='item-info'>
            <h3 class='item-name'>
              <%= "#{item.product}" %>
            </h3>
            <div class='item-price'>
              <span><%= "#{item.price}" %>
              円<br><%= "#{item.shipping_fee.name}" %>
              </span>  
            </div>
          </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
</div>
